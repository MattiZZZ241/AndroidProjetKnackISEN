<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivateUserInfoActivity">

    <EditText
        android:id="@+id/userInfoCurrentPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/infoCurrentPassword"
        app:layout_constraintTop_toBottomOf="@+id/infoCurrentPassword"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/infoNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="New password :"
        android:textColor="@color/sausage_orange"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/infoEmail"
        app:layout_constraintTop_toBottomOf="@+id/userInfoEmail" />

    <TextView
        android:id="@+id/infoCurrentPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Current password to save :"
        android:textColor="@color/sausage_orange"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/userInfoNewPassword"
        app:layout_constraintTop_toBottomOf="@+id/userInfoNewPassword" />

    <TextView
        android:id="@+id/infoEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:text="Email :"
        android:textColor="@color/sausage_orange"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userInfoNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/infoNewPassword"
        app:layout_constraintTop_toBottomOf="@+id/infoNewPassword" />

    <Button
        android:id="@+id/privateSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Save"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userInfoCurrentPassword" />

    <EditText
        android:id="@+id/userInfoEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/infoEmail"
        app:layout_constraintTop_toBottomOf="@+id/infoEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>